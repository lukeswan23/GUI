#:set colour_hired (0.76, 0.36, 0.36, 1)
#:set colour_free (0.25, 0.48, 0.25, 1)

<ItemButton@Button>:
    background_colour: colour_hired if self.hired else colour_free

BoxLayout:
    orientation: 'vertical'
    id: mainBox

    Popup:
        id: popup
        title: "Add Item"
        on_parent:
            # Make popup disappear immediately
            if self.parent == mainBox: self.parent.remove_widget(self)

        BoxLayout:
            id: inputs
            orientation: 'vertical'
            Label:
                text: 'Item Name:'
            TextInput:
                id: itemName
                value: ''
                multiline: False
                write_tab: False
                font_size: 24
            Label:
                text: 'Description:'
            TextInput:
                id: itemDescription
                value: ''
                multiline: False
                write_tab: False
                font_size: 24
            Label:
                text: 'Price per day:'
            TextInput:
                id: itemPrice
                value: ''
                multiline: False
                write_tab: False
                font_size: 24
            Button:
                text: 'Save Item'
                on_release: app.press_save(itemName.text, itemDescription.text, itemPrice.text)
            Button:
                text: 'Cancel'
                on_release: app.close_popup()
            Label:
                text: app.status_text


    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            size_hint_x: .3
            orientation: 'vertical'
            Button:
                id: buttonList
                text: 'List Items'
                on_release: app.press_list()
            Button:
                id: buttonHire
                text: 'Hire Items'
                on_release: app.press_hire()
            Button:
                id: buttonReturn
                text: 'Return Items'
                on_release: app.press_return()
            Button:
                text: 'Confirm'
                on_release: app.press_confirm()
            Button:
                text: 'Add New Item'
                on_release: app.press_add()

        GridLayout:
            id: itemsGrid
            cols: 2

    Label:
        size_hint_y: .1
        text: app.status_text
